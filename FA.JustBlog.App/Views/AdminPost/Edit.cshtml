@model Application.Dto.PostDtos.UpdatePostDto

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Edit Post</h2>
<div class="container mt-5">
    <form asp-action="Edit" asp-controller="AdminPost" method="post">
		<input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề bài viết" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Summary">Summary</label>
            <textarea asp-for="Summary" class="form-control" rows="3" placeholder="Nhập tóm tắt ngắn về bài viết"></textarea>
            <span asp-validation-for="Summary" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Content">Content</label>
            <textarea asp-for="Content" class="form-control" rows="6" placeholder="Nhập nội dung bài viết"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CategoryId">Category</label>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                <option value="">-- Select category --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TagNames">TagNames</label>
            <input asp-for="TagNames" class="form-control" placeholder="enter tag" />
            <span asp-validation-for="TagNames" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="form-check">
                <input asp-for="IsPublished" class="form-check-input" />
                <label asp-for="IsPublished" class="form-check-label">IsPublished</label>
            </div>
        </div>
        <input asp-for="CreatedBy" type="hidden" />


        <div class="form-group">
            <button type="submit" class="btn btn-primary">Update</button>
            <a href="@Url.Action("Index", "AdminPost")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

