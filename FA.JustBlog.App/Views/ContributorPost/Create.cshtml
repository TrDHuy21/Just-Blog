@model Application.Dto.PostDtos.CreatePostDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<<h2>Create Post</h2>
<div class="container mt-5">
    <form asp-action="Create" asp-controller="ContributorPost" method="post">
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề bài viết" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Summary">Summary</label>
            <textarea asp-for="Summary" class="form-control" rows="3" placeholder="Nhập tóm tắt ngắn về bài viết"></textarea>
            <span asp-validation-for="Summary" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Content">Content</label>
            <textarea asp-for="Content" class="form-control" rows="6" placeholder="Nhập nội dung bài viết"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CategoryId">Category</label>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                <option value="">-- Select category --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TagNames">TagNames</label>
            <input asp-for="TagNames" class="form-control" placeholder="enter tag" />
            <span asp-validation-for="TagNames" class="text-danger"></span>
        </div>

        <input asp-for="IsPublished" class="form-check-input" value="false" type="hidden"/>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create</button>
            <a href="@Url.Action("GetMyPost", "ContributorPost")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

