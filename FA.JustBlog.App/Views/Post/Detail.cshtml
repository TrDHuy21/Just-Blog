@{
}
@model Application.Dto.PostDtos.DetailPostDto
<div class="container mt-5">
    <h3 class="display-4">@Model.Title</h3>
    <p class="text-muted">Được đăng vào @Model.CreatedDate.ToString("dd/MM/yyyy") | Lượt xem: @Model.Views</p>
    <div class="rating">
        <span class="badge badge-warning">@Model.Rate</span>
    </div>
    <div class="mt-3">
        @Html.GenCategoryLink(Model.CategoryDto)
    </div>
    <hr />
    <p>@Model.Summary</p>
    <hr />
    <div>
        @Html.Raw(Model.Content.Replace("\n", "<br />"))
    </div>
    <hr />
	<div class="mt-3">
		<strong>Tags:</strong>
        @Html.GenTagLink(Model.TagNames)
    </div>
    <div id="Comment">
        <partial name="PartialComment" model=" Model.Comments" view-data='new ViewDataDictionary(ViewData) { { "PostId", Model.Id } }' />
    </div>
</div>

