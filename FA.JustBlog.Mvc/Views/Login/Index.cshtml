@{
}
@model Application.Dto.UserDtos.LoginDto
<div class="container mt-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <div class="card px-5 py-5" id="form1">
                <form asp-action="Login" asp-controller="Login" method="post">
                    <div class="forms-inputs mb-4">
                        <label>User Name</label>
                        <input type="text" asp-for="UserName" class="form-control" required />
                    </div>

                    <div class="forms-inputs mb-4">
                        <label>Password</label>
                        <input type="text" asp-for="Password" class="form-control" required />
                    </div>
                    <button type="submit" class="btn">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>
    
